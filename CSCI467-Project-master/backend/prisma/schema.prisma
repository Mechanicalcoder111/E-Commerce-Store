generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  WAREHOUSE_WORKER
  RECEIVING_DESK
}

enum OrderStatus {
  ORDERED
  PACKING
  SHIPPED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inventoryLogs InventoryLog[]
  packedOrders  Order[]        @relation("PackedBy")

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String   @db.Text
  price       Float
  weight      Float
  pictureURL  String
  quantity    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems    OrderItem[]
  inventoryLogs InventoryLog[]

  @@map("products")
}

model Order {
  id              String      @id @default(uuid())
  orderNumber     String      @unique @default(cuid())
  status          OrderStatus @default(ORDERED)
  customerName    String
  customerEmail   String
  shippingAddress String
  shippingCity    String
  shippingState   String
  shippingZip     String
  shippingCountry String      @default("USA")
  cardLast4       String
  ccAuthNumber    String
  ccTransactionId String      @unique
  subtotal        Float
  shippingCost    Float
  totalWeight     Float
  totalAmount     Float
  orderedAt       DateTime    @default(now())
  packingStartedAt DateTime?
  shippedAt       DateTime?
  cancelledAt     DateTime?

  items      OrderItem[]
  packedBy   User?       @relation("PackedBy", fields: [packedById], references: [id])
  packedById String?

  @@index([customerEmail])
  @@index([status])
  @@index([orderedAt])
  @@map("orders")
}

model OrderItem {
  id           String  @id @default(uuid())
  order        Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId      String
  product      Product @relation(fields: [productId], references: [id])
  productId    String
  productName  String
  quantity     Int
  priceAtTime  Float
  weightAtTime Float

  @@map("order_items")
}

model ShippingBracket {
  id        String   @id @default(uuid())
  minWeight Float
  maxWeight Float
  cost      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([minWeight, maxWeight])
  @@map("shipping_brackets")
}

model InventoryLog {
  id             String   @id @default(uuid())
  product        Product  @relation(fields: [productId], references: [id])
  productId      String
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?
  quantityChange Int
  quantityAfter  Int
  reason         String
  orderId        String?
  createdAt      DateTime @default(now())

  @@index([productId])
  @@index([userId])
  @@index([createdAt])
  @@map("inventory_logs")
}

model BlacklistedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
  @@map("blacklisted_tokens")
}
